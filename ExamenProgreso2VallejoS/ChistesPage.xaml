<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenProgreso2VallejoS.ChistesPage"
             Title="Chistes">
    <AbsoluteLayout>

        <Label x:Name="ChisteLabel"
               Text="Cargando chiste..."
               FontSize="20"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               AbsoluteLayout.LayoutBounds="0.5, 0.4, 0.9, AutoSize"
               AbsoluteLayout.LayoutFlags="All"/>

        <Button Text="Otro chiste"
                Clicked="OnOtroChisteClicked"
                AbsoluteLayout.LayoutBounds="0.5, 1, 1, 50"
                AbsoluteLayout.LayoutFlags="WidthProportional, PositionProportional"/>
    </AbsoluteLayout>
</ContentPage>