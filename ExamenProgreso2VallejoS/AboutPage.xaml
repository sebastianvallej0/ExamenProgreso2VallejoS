<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenProgreso2VallejoS.AboutPage"
             Title="About">
    <Grid RowDefinitions="*,*"
          ColumnDefinitions="*,*"
          Padding="20"
          RowSpacing="20"
          ColumnSpacing="20">

        <!-- Nombre -->
        <Frame Grid.Row="0" Grid.Column="0"
               BorderColor="Gray"
               CornerRadius="10"
               Padding="10"
               HasShadow="False">
            <StackLayout>
                <Label Text="Nombre:" FontAttributes="Bold" />
                <Label Text="Sebastián Vallejo" />
            </StackLayout>
        </Frame>

        <!-- Fecha de nacimiento -->
        <Frame Grid.Row="0" Grid.Column="1"
               BorderColor="Gray"
               CornerRadius="10"
               Padding="10"
               HasShadow="False">
            <StackLayout>
                <Label Text="Fecha:" FontAttributes="Bold" />
                <Label Text="01/01/2000" />
            </StackLayout>
        </Frame>

        <!-- Intereses -->
        <Frame Grid.Row="1" Grid.Column="0"
               BorderColor="Gray"
               CornerRadius="10"
               Padding="10"
               HasShadow="False">
            <StackLayout>
                <Label Text="Intereses:" FontAttributes="Bold" />
                <Label Text="Tecnología, videojuegos" />
            </StackLayout>
        </Frame>

        <!-- Versión -->
        <Frame Grid.Row="1" Grid.Column="1"
               BorderColor="Gray"
               CornerRadius="10"
               Padding="10"
               HasShadow="False">
            <StackLayout>
                <Label Text="Versión:" FontAttributes="Bold" />
                <Label Text="1.0" />
            </StackLayout>
        </Frame>

    </Grid>
</ContentPage>